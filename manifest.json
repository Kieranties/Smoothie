{
    "name": "Smoothie",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Blending Remember The Milk and Google Chrome",
    "icons": {
        "16": "img/icons/icon16.png",
        "32": "img/icons/icon32.png",
        "48": "img/icons/icon48.png",
        "128": "img/icons/icon128.png"
    },

    "omnibox": { "keyword": "sm"},

    "options_page": "page/options.html",

    "background": {
        "persistent": false,
        "scripts": [
            "js/lib/md5.min.js",
            "js/lib/rtm.js",
            "js/omni.js"
        ]
    },

    "app": {
        "launch": {
            "local_path": "page/background.html"
        }
    },

    "permissions":[
        "storage",
        "https://*.rememberthemilk.com/*"
    ]
}