{
    "name": "Milkshake",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Extending the awesome Remember The Milk with a few more features",
    "icons": {
        "16": "img/icons/icon16.png",
        "32": "img/icons/icon32.png",
        "48": "img/icons/icon48.png",
        "128": "img/icons/icon128.png"
    },

    "omnibox": { "keyword": "ms"},

    "background": {
        "persistent": false,
        "scripts": [
            "js/omniboxEvents.js"
        ]
    },

    "app": {
        "launch": {
            "local_path": "page/background.html"
        }
    }
}